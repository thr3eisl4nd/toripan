<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <div class="p-2">
                <h4>カート</h4>
            </div>
            <% @items.each do |item| %>
            <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-light mt-4 px-3 rounded">
                <div class="mr-1"><%= link_to image_tag(item.image, class: "rounded", width: "70"), '' %></div>
                <div class="d-flex flex-column product-details"><span class="font-weight-bold"><%= item.name %></span>
                </div>
                <div>
                    <h5 class="text-grey"><%= item.price %></h5>
                </div>
                <div class="d-flex align-items-center"><i class="fa fa-trash mb-1 text-danger"><%= link_to image_tag('trash.png', alt: "キャンセル"), item_delete_in_carts_path(item.id), method: :post %></i></div>
            </div>
            <% end %>
            <div class="d-flex flex-row align-items-center mt-3 p-2 bg-white rounded"><button class="btn btn-outline-secondary btn-block btn-lg ml-2 pay-button" type="button">予約する</button></div>
        </div>
    </div>
</div>