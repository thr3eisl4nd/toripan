<h2>新規登録</h2>
<div class="mb-3">
<%= form_with model: @user, url: user_registration_path, class: "form-floating", local: true  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, autofocus: true, class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_area :family_name, class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name, class: "input-default" %>
  </div>

  <div class="field">
    <%= f.label :phonenumber %><br />
    <%= f.text_area :phonenumber, class: "input-default" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "push-btn" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
