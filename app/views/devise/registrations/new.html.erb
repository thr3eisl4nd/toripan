<div class="col-md-6 offset-md-3">
  <h1 class="display-6 my-4">会員情報登録</h1>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group pt-4 pd-3">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, class: "form-control", placeholder: "全角カタカナのみ", maxlength: "12" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "6文字以上の半角英数字" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :family_name %><br />
        <%= f.text_field :family_name, class: "form-control", placeholder: "姓" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <%= f.label :phonenumber %><br />
        <%= f.text_field :phonenumber, class: "form-control", placeholder: "携帯電話番号(-)なし" %>
      </div>
      <div class="text-center my-3">
      <%= f.submit "登録する", class: "actions btn btn-outline-secondary btn-lg btn-block" %>
      </div>
    <% end %>
</div>