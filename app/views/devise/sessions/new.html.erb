<div class="col-md-6 offset-md-3">
  <h1 class="display-6 my-4">ログイン</h1>
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group pt-4 pd-3">
        <label for="email">メールアドレス</label>
        <%= f.text_field :email, class: "form-control", placeholder: "ご登録済みのメールアドレス" %>
      </div>
      <div class="form-group pt-4 pd-3">
        <label for="password">パスワード</label>
        <%= f.password_field :password, class: "form-control", placeholder: "ご登録済みのパスワード" %>
      </div>
      <div class="form-check pt-4 pd-3">
      <% if devise_mapping.rememberable? %>
          <label for="remember">ログイン情報を保存する</label>
          <%= f.check_box :remember_me, class: "form-check-input" %>
      <% end %>
      </div>
      <div class="text-center my-3">
      <%= f.submit "ログイン", class: "actions btn btn-outline-secondary btn-lg btn-block" %>
      </div>
    <% end %>
    <div class="text-muted my-1">
      <%= render "devise/shared/links" %>
    </div>
</div>