  <body>
    <main>

      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">商品一覧</h1>
            <p class="lead text-muted">画面をクリックすると、商品毎の詳細をご覧いただけます。</p>
          </div>
        </div>
      </section>

    <div class="container">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <%=link_to image_tag(item.image, class: "card-img-top"), "#" %>
                  <div class="card-body">
                    <%= item.name %>
                  <div class="card-text">
                    ¥<%= item.price %>(税込)
                  <% if user_signed_in? && current_user.admin? %>
                  <div class="card-text">
                    <%= link_to "編集する", "", class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                  <% end %>
                  </div>
                    <a href="#" class="btn btn-outline-secondary btn-sm">カートに入れる</a>
                  </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    </main>
  </body>
